@model Ocean2Ocean.DataAccess.JourneysSearchResult
@{
    ViewData["Title"] = "Journeys";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h4 class="display-4 pb-3">
                Find Your Journey
            </h4>
            <form method="get">
                <div class="input-group pb-4">
                    <input type="text" class="form-control" name="journeyName" value="@Model?.Query" placeholder="What's the name of the Journey?" aria-label="Journey Name" aria-describedby="button-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="submit" id="button-addon2">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    @{
        if (Model != null && Model.Journeys != null && Model.Journeys.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover table-borderless">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Date Created
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var journey in Model?.Journeys)
                            {
                                <tr>
                                    <td class="h2">
                                        @journey.JourneyName
                                    </td>
                                    <td>
                                        @journey.Created
                                    </td>
                                    <td>
                                        <a class="btn btn-primary" href="/@journey.JourneyName">
                                            🗺️ View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No results found for that query.
            </div>
        }
    }
</div>