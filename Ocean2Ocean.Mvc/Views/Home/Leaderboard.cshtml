@model IEnumerable<Ocean2Ocean.DataAccess.Step>
@{
    ViewData["Title"] = "Leaderboard";
}

<script>
    function Share() {
  var Url = document.getElementById("url");
  Url.innerHTML = window.location.href;
  console.log(Url.innerHTML)
  Url.select();
  document.execCommand("copy");
    }
</script>

<div class="container">
    @{
        if (Model != null && Model.Any())
        {
            <div class="row">
                <div class="col">
                    <h1 class="display-4 pt-3">
                        Leaderboard for @Model?.FirstOrDefault()?.JourneyName
                    </h1>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="alert alert-success mt-3" role="alert">
                        @Model?.FirstOrDefault()?.JourneyName has made it <strong>@Model?.Sum(x => x.TotalSteps).ToString("N0")</strong> steps into its Journey so far!
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-borderless">
                            <tbody>
                                @{
                                    var names = Model?.ToArray();
                                    for (int i = 0; i < names.Length; i++)
                                    {
                                        var postion = i + 1;
                                        decimal portion = Decimal.Divide(names[i].TotalSteps, names.Sum(x => x.TotalSteps));
                                        string formattedPortion = (portion * 100M).ToString("N2") + " %";

                                        // First place
                                        if (i == 0)
                                        {
                                            <tr>
                                                <td scope="row">
                                                    <strong>@postion 🏆</strong>
                                                </td>
                                                <td>
                                                    @names[i].Email
                                                </td>
                                                <td>
                                                    @names[i].TotalSteps Steps
                                                </td>
                                                <td>
                                                    @formattedPortion
                                                </td>
                                            </tr>
                                        }
                                        else if (i == names.Length - 1)
                                        {
                                            <tr>
                                                <td scope="row">
                                                    <strong>@postion 🏳️</strong>
                                                </td>
                                                <td>
                                                    @names[i].Email
                                                </td>
                                                <td>
                                                    @names[i].TotalSteps Steps
                                                </td>
                                                <td>
                                                    @formattedPortion
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td scope="row">
                                                    <strong>@postion</strong>
                                                </td>
                                                <td>
                                                    @names[i].Email
                                                </td>
                                                <td>
                                                    @names[i].TotalSteps Steps
                                                </td>
                                                <td>
                                                    @formattedPortion
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <a class="btn btn-primary" href="/@Model?.FirstOrDefault()?.JourneyName">
                        🗺️ Return to the Map
                    </a>
                    @*<button class="btn btn-success" onclick="Share()">
                            🔗 Share This
                        </button>
                        <textarea id="url" rows="1" cols="30" hidden></textarea>*@
                </div>
            </div>
        }
    }
</div>