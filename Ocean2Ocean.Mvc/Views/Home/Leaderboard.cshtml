                                        {
                                            <tr>
                                                <td scope="row">
                                                    <strong>@postion 🏆</strong>
                                                </td>
                                                <td>
                                                    @names[i].Email
                                                </td>
                                                <td>
                                                    @names[i].TotalSteps Steps
                                                </td>
                                                <td>
                                                    @formattedPortion
                                                </td>
                                            </tr>
                                        }
                                        else if (i == names.Length - 1)
                                        {
                                            <tr>
                                                <td scope="row">
                                                    <strong>@postion 🐌</strong>
                                                </td>
                                                <td>
                                                    @names[i].Email
                                                </td>
                                                <td>
                                                    @names[i].TotalSteps Steps
                                                </td>
                                                <td>
                                                    @formattedPortion
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td scope="row">
                                                    <strong>@postion</strong>
                                                </td>
                                                <td>
                                                    @names[i].Email
                                                </td>
                                                <td>
                                                    @names[i].TotalSteps Steps
                                                </td>
                                                <td>
                                                    @formattedPortion
                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    <a class="btn btn-primary" href="/@Model?.JourneyRankings?.FirstOrDefault()?.JourneyName">
        🗺️ Return to the Map
    </a>
</div>